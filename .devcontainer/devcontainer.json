// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
  "name": "Go Starter",
  "dockerComposeFile": "docker-compose.yml",
  "service": "golang",
  "workspaceFolder": "/workspace",
  "postCreateCommand": {
    "safe-directory": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "known_hosts": "sudo chown vscode:vscode /home/vscode/.ssh && ssh-keyscan github.com > /home/vscode/.ssh/known_hosts",
    "go-tidy": "go env -w GOMODCACHE=/home/vscode/.go-cache && go mod tidy && go generate ./...",
    "npm-install": "npm install -g npm@11.1.0 && npm install"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "streetsidesoftware.code-spell-checker",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-preview-github-styles",
        "DavidAnson.vscode-markdownlint",
        "xlthu.Pangu-Markdown",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github",
        "fill-labs.dependi",
        "formulahendry.code-runner",
        "hilleer.yaml-plus-json",
        "tberman.json-schema-validator"
      ]
    }
  },
  "features": {
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh/config,target=/home/vscode/.ssh/config,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh/id_ed25519,target=/home/vscode/.ssh/id_ed25519,type=bind,consistency=cached"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "vscode"
}