{
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "prepare": "husky"
  },
  "type": "module",
  "lint-staged": {
    "*.sh": [
      "shfmt -w"
    ],
    "*.go": [
      "goimports -w",
      "golangci-lint run"
    ],
    "*.yaml": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint",
      "prettier --write"
    ]
  }
}